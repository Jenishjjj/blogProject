<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <strong>Basic Form</strong> Elements
                            </div>
                            <div class="card-body card-block">
                                <form action="/EditRec" method="post" enctype="multipart/form-data" class="form-horizontal">
                                    <input type="text" name="EditId" value="<%=singleAdmin.id%>">
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <% var nam = singleAdmin.name.split(" "); %>
                                            <label for="text-input" class=" form-control-label">First Name</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="fname" placeholder="Enter First Name" class="form-control" value="<%=nam[0]%>">
                                            <small class="form-text text-muted"></small>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">Last Name</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="lname" placeholder="Enter last Name" class="form-control" value="<%=nam[1]%>">
                                            <small class="form-text text-muted"></small>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="email-input" class=" form-control-label">Enter Email</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="email" id="email-input" name="email" placeholder="Enter Email" class="form-control" value="<%=singleAdmin.email%>">
                                            <small class="help-block form-text"></small>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="password-input" class=" form-control-label">Password</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="password" id="password-input" name="password" placeholder="Password" class="form-control" value="<%=singleAdmin.password%>">
                                            <small class="help-block form-text"></small>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Gender</label>
                                        </div>
                                        <div class="col col-md-9">
                                            <div class="form-check-inline form-check">
                                                <label for="inline-radio1" class="form-check-label ">
                                                            <input type="radio" id="inline-radio1" name="gender" value="male" class="form-check-input" <% if(singleAdmin.gender=="male") { %><%= "checked" %><% } %>>Male
                                                        </label>
                                                <label for="inline-radio2" class="form-check-label ">
                                                            <input type="radio" id="inline-radio2" name="gender" value="female" class="form-check-input" <% if(singleAdmin.gender=="female") { %><%= "checked" %><% } %>>Female
                                                        </label>
                                            </div>
                                        </div>
                                    </div>

                                    <% var city = ["surat","vadodara","rajkot","mumbai"] %>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="select" class=" form-control-label">Select City</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <select name="city" id="select" class="form-control">
                                                <option value="0">--select city--</option>
                                                    <% for(var i=0;i<=city.length;i++){ %>
                                                        <option value="<%=city[i]%>" <% if(singleAdmin.city==city[i]) { %><%= "selected" %><% } %> ><%=city[i]%></option>
                                                    <% } %>
                                                </select>
                                        </div>
                                    </div>
                                    
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Hobby</label>
                                        </div>
                                        <div class="col col-md-9">
                                            <div class="form-check-inline form-check">
                                                <label for="inline-checkbox1" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox1" name="hobby[]" value="traveling" class="form-check-input" <% if(singleAdmin.hobby.includes("traveling")) { %><%= 'checked' %><% } %>>traveling
                                                        </label>
                                                <label for="inline-checkbox2" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox2" name="hobby[]" value="reading" class="form-check-input" <% if(singleAdmin.hobby.includes("reading")) { %><%= 'checked' %><% } %>>reading
                                                        </label>
                                                <label for="inline-checkbox3" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox3" name="hobby[]" value="writing" class="form-check-input" <% if(singleAdmin.hobby.includes("writing")) { %><%= 'checked' %><% } %>>wrting
                                                        </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="file-input" class=" form-control-label">Upload Image</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="file" id="file-input" name="image" class="form-control-file">
                                            <img src="<%=singleAdmin.image%>" height="50" width="50">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="textarea-input" class=" form-control-label">Description</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <textarea name="description" id="textarea-input" rows="9" placeholder="Content..." class="form-control"><%=singleAdmin.description%></textarea>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" name="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-dot-circle-o"></i> Update
                                                </button>
                                        <button type="reset" class="btn btn-danger btn-sm">
                                                    <i class="fa fa-ban"></i> Reset
                                                </button>
                                    </div>
                                </form>
                            </div>  
                        </div>

                    </div>


                </div>
                <%- include('footer') %>