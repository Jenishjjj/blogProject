<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <form class="form-header">
                                <input class="au-input au-input--xl" type="text" name="search" placeholder="Search for datas &amp; reports..." />
                                <button class="au-btn--submit" type="submit" name="searching">
                                    <i class="zmdi zmdi-search"></i>
                                </button>
                            </form>
                            <form action="/offer/multDel" method="post">
                                <table class="table table-borderless table-striped table-earning">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="multidelet">
                                                <input type="submit" value="Delete" style="border: 1px solid red;">
                                            </th>
                                            <th>No.</th>
                                            <th>Icon</th>
                                            <th>Title</th>
                                            <th>Content</th>
                                            <th>Status</th>
                                            <th class="text-right">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        
                                        <% for(var ad of offerData){ %>
                                            <tr>
                                                <td><input type="checkbox" name="multDel[]" class="singleDelet" value="<%=ad.id%>"></td>
                                                <td>1</td>
                                                <td><%=ad.icon %></td>
                                                <td><%=ad.title %></td>
                                                <td><%=ad.content%></td>
                                                <td><%if(ad.isActive) {%>
                                                        <a href="?id=<%= ad.id %>&isActive=deactive&search=<%= search %>&page=<%= cpage %>" style="color: green;">Active</a>
                                                    <% } else { %>
                                                        <a href="?id=<%= ad.id %>&isActive=active&search=<%= search %>&page=<%= cpage %>" style="color: red;">Deactive</a>
                                                    <% } %>
                                                    </td>
                                                <td class="text-right">
                                                    <a href="/offer/deletofferRec/<%=ad.id%>" style="color: green;">Delete</a> ||
                                                    <a href="/offer/updateofferRec/?id=<%=ad.id%>" style="color: red;">Update</a>
                                                </td>
                                            </tr>
                                        
                                        <% } %>

                                        <tr>
                                            <td>
                                                <% var pageNum=cpage %>

                                                        <% var pre=--pageNum %>
                                                            <% if(pre>0) {%>
                                                                <a href="?page=<%= pre %>&search=<%= search %>">
                                                                    << pre </a>
                                                                        <% } %>
                                                                            <a href="<%= cpage%>&search=<%= search %>">
                                                                                <%=cpage%>
                                                                            </a>
                                                                            <% var next=++cpage %>

                                                                                <% if(cpage <= pagesData){ %>
                                                                                    <a
                                                                                        href="?page=<%= next %>&search=<%= search %>">
                                                                                        next >> </a>
                                                                                    <% } %>
                                            </td>
                                        </tr>   
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>